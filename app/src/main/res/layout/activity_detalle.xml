<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.constanza.tingoidapp.DetalleActivity"
    android:background="@drawable/bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/oscuroTid"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="55dp"
        android:paddingRight="16dp"
        android:paddingTop="65dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/fondoticket">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/empresa_detalle_imagen"
            app:srcCompat="@drawable/empresa1"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:paddingTop="140dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/detalle_empresa"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:text="Empresa"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingBottom="16dp"
            android:paddingTop="220dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detalle_tipo"
                android:text="Tipo"
                android:textStyle="italic"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="250dp"
            android:layout_width="match_parent"
            android:paddingBottom="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/campo">

            <TextView
                android:id="@+id/detalle_expiracion"
                android:text="XX/XX/XXXX"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/campo">
            <TextView
                android:id="@+id/detalle_valido"
                android:text="VÃ¡lido"
                android:textSize="20sp"
                android:textColor="@color/celesteTid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="340dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:text="Valor: "
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detalle_valor"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>

