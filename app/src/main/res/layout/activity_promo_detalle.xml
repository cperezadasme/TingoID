<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.constanza.tingoidapp.PromoDetalleActivity"
    android:background="@drawable/bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/cyan_primary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:id="@+id/image_promo"
        app:srcCompat="@drawable/logo_tingo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="2X1 Almuerzo completo"
        android:background="@color/background_light"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:id="@+id/descripcion_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_below="@+id/image_promo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:id="@+id/layout_avance_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/descripcion_promo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/mensaje_avance_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--
        AGREGAR LAYOUT CON BARRAS DE AVANCE
        -->

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layout_meta"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/descripcion_promo"
        android:layout_alignTop="@+id/layout_avance_promo">

        <ImageButton
            android:id="@+id/boton_genarar_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ticketbuttoncyan2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Generar \nCÃ³digo"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignEnd="@+id/descripcion_promo">

        <TextView
            android:text="Vencimiento: "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/fecha_venciomiento_promo" />

        <TextView
            android:text="26-12-2000"
            android:id="@+id/fecha_venciomiento_promo"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_toEndOf="@+id/image_promo" />
    </LinearLayout>


</RelativeLayout>
